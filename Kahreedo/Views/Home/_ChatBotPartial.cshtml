<script>
    document.getElementById("user-input").focus();

   
        debugger;
    $('#user-input').keypress(function (e) {
      
            if (e.which === 13) { // Check if the key pressed is "Enter"
                e.preventDefault(); // Prevent the default form submission
                sendMessage(); // Call your sendMessage function
            }
        });
    
   


    function sendMessage() {
        debugger;
        var userMessage = $("#user-input").val();

        $.ajax({
            url: "/Bot/SendMessage", // Adjust the endpoint
            method: "POST",
            data: { message: userMessage },
            success: function (data) {
                // Update chat window with bot response
                $("#conversation").append("<div>User: " + userMessage + "</div>");
                $("#conversation").append("<div>Digital Assistant: " + data + "</div>");
            },
            // Clear the input field
          
            error: function (error) {
                console.error(error);
            }
        });
        $('#user-input').val('');
       
    }
</script>